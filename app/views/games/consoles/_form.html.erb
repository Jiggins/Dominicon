<%= bootstrap_form_for(@games_console) do |f| %>
  <% if @games_console.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@games_console.errors.count, "error") %> prohibited this games_console from being saved:</h2>

      <ul>
        <% @games_console.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name, required: true %>
  <%= f.text_field :description %>
  <%= f.collection_select(:console, @all_consoles, :make_sym, :to_s) %>
  <%= f.text_field :publisher %>
  <%= f.text_field :url %>
  <%= f.number_field :min_players, required: true, min: 1, value: 1 %>
  <%= f.number_field :max_players, required: true, min: 1 %>
  <%= f.number_field :stock, value: 1 %>
  <%= f.text_field :owner, vaule: :game_soc %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>
